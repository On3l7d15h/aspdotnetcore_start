@* Strong Typed *@
@model Application.ViewModel.EstimateZodiacalSignViewModel;
@{
    ViewData["title"] = "Zodiacal Sign | Main";

    //string array month
    string[] months = { "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre" };
}
<!-- Title -->
<div>
    <h1 class="mx-auto w-50 text-center font-weight-bold">Zodiacal Sign</h1>
</div>

<!-- Introduction Paragraph -->
<div>
    <p class="text-muted text-center"> 
        This is an application, that allows you to know your zodiacal sign, do not know about yours? Try it for free! 
    </p>
</div>

<!-- Form to get the Zodiac Sign -->
<div class="d-flex flex-row justify-content-evenly">

    <div class="w-25 shadow border border-secondary p-3 roundedd-flex flex-column align-items-center justify-content-evenly gap-5">
        <h3 class="text-center my-2">Llene los campos</h3>
        <form class="d-flex flex-column align-items-center justify-content-evenly gap-4" method="post" asp-controller="Main" asp-action="Index">
            <div class="w-100">
                <label asp-for="@Model.Day" class="form-label w-100">
                    Dia de Nacimiento:
                </label>
                <select asp-for="@Model.Day" class="form-select">
                    @for (int i = 1; i <= 31; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>

            <div class="w-100">
                <label asp-for="@Model.Month" class="form-label">
                    Mes de Nacimiento:
                </label>
                <select asp-for="@Model.Month" class="form-select">
                    @for(int i = 1; i <= months.Length; i++)
                    {
                        <option value=@i>
                            @months[i-1]
                        </option>
                    }
                </select>
            </div>
        
            <div class="mt-3 w-100 d-flex flex-row justify-content-between">
                <button type="submit" class="w-100 btn btn-warning">Check</button>
            </div>
     </form>
</div>

<!-- Displayed the information -->
    <div class="w-50 h-5 shadow border border-secondary p-3 rounded">
        @if (Model?.Name != "")
        {
            <h3 class="text-center"> Resultado </h3>
            <hr class="w-25 mx-auto"/>
            <p class="text-center text-muted">
                Su fecha de nacimiento es @Model?.Day de @months[(int)Model?.Month - 1], su signo del zodiaco es:
            </p>
            <h5 class="text-center my-4 w-50 mx-auto bg-warning bg-opacity-75 rounded p-2">
                @Model?.Name 
            </h5>
        }
        else
        {
            <h3 class="text-center">
                No hay resultados aún...
            </h3>
        }
    </div>

</div>